				width 45%


@media (max-width: 630px)
	/**********************
		HEADER
    **********************/
	.header
		.optionsSocial
			width 100%
			margin 0
			flex-center()
				
		&-main
			nav	
				ul
					padding-top 15.5em

	/**********************
    	INDEX
    **********************/			
	body
		font-size 14px
		
	.zone-main
		.smartphone
			display block
			
		.tablet
			display none
		
	.b-container
		width 95%
		&-item
			width 95%
			
		.textOurs
			width 90%
			
		&-news
			.item
				width 60%
				
	.generalTips
		.pestana1
