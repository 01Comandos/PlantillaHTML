	.formContact
		form
			width 90%

							
	/**********************
		FOOTER
    **********************/    	
	.footerContainer
		text-align center	
				
@media (max-width: 470px)
	/**********************
    	INDEX
    **********************/
	.b-container
		&-item
			width 100%
			li
				margin-bottom 1em
		&-news
			.item
				width 80%
				
	.generalTips
		.pestana1
			top -2em


// Small devices (landscape phones, 415px and up)
@media (max-width: 415px)
	body
		font-size 11px

	/**********************
		HEADER
    **********************/
	.header				
		&-main
			nav	
				ul
					width 14em
				
	/**********************
        INDEX
    **********************/				
	.b-container
		&-medical
			.item
				width 100%
				a
					flex-flexStart()
					text-align left
					figure
						margin 0
					.dates
						&-item
							flex-flexStart()
						
